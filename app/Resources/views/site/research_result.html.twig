					<a href="#" title="Liste avec grandes vignettes" data-type="list-large" class="list-large-link current"><i></i></a>
				</div>
				<!-- end .view -->
			</div>
			<!-- end .loop-actions -->	
        <div class="section-content grid-small">
            <div class="nag cf">  
                {% for video in videos %}
                    {% include 'template/small_square_video.html.twig' %}
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- end left content -->
    <!-- sidebar -->
    <div id="sidebar" role="complementary" class="masonry" style="position: relative; min-height: 500px">
        <div id="text-2" class="widget widget_text masonry-brick" style="position: absolute; top: 0px; left: 0px;">
            <div class="widget-header"><h3 class="widget-title">Principales fonctionnalités</h3></div>	
