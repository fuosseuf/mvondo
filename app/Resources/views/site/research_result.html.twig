{% extends "layout/base.html.twig" %}

{% block title %} {{ parent() }} - Resultats de recherche {% endblock %}

{% block body %}
	<div id="content">
		<div class="loop-header">
				<h1 class="loop-title"><span class="prefix">R&eacute;sultats de recherche pour</span> <em>{{ s }}</em></h1>
				<div class="loop-desc"></div>
		</div>
		<!-- left content-->
    
		<div class="loop-actions cf">
                    {#
				<div class="sort">
					<span class="prefix">Tri:</span>
