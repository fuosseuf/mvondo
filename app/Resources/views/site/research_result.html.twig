					</span>
					<!-- end .orderby -->
					<select class="orderby-select">
						<option value="">Date</option>
						<option value="">Titre</option>
						<option value="">Vues</option>
						<option value="" selected='selected'>Favoris</option>
						<option value="">Commentaires</option>
						<option value="">Aléatoire</option>
					</select>
					<span class="order">
						<a class="asc" href="#" title="Trier par ordre ascendant">Trier par ordre ascendant</a>
					</span>
					<!-- end .order -->
				</div>
                    #}
				<!-- end .sort -->
				<div class="view">
					<span class="prefix">Vue:</span>
