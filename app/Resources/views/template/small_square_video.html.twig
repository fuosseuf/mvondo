<!-- Item small square video -->
<div class=" item cf item-video">
    <!-- thumbnail de la video -->
    <div class="thumb">
        <a class="clip-link"title="{{ video.title }}" href="{{ path('mvondo_video_view', {'slug': video.slug })}}">
            <span class="clip">
                <img src="{{ video.image }}" alt="{{ video.title }}">
                <span class="vertical-align"></span>
            </span>

            <span class="overlay"></span>
        </a>
    </div>
    <!-- info de la video -->    
    <div class="data">
        <h2 class="entry-title">
            <a href="{{ path('mvondo_video_view', {'slug': video.slug })}}" rel="bookmark" title="{{ video.title }}">
               {{ video.title }}
            </a>
        </h2>

        <p class="stats">
            {% if views is not defined %}<span class="views"><i class="count">0K</i> <span class="suffix">Views</span></span>{% endif %}
            {% if comments is not defined %}<span class="comments"><i class="count">0</i> <span class="suffix">Comments</span></span>{% endif %}
            <span class="dp-post-likes likes"><i class="count" data-pid="1731">{% if video.kiffCount is not defined %}0{% else %}{{video.kiffCount}}{% endif %}</i> <span class="suffix">Likes</span></span>
        </p>
    </div>
</div>
<!-- end Item small square video -->