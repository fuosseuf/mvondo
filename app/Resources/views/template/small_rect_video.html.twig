<!-- Item small rectangle video -->
<li class="item cf item-video">

    <div class="thumb">
        <a class="clip-link"title="{{ video.title }}" href="{{ path('mvondo_video_view', {'slug': video.slug })}}">
            <span class="clip">
                <img src="{{ video.imageSmall }}" alt="{{ video.title }}">
                <span class="vertical-align"></span>
            </span>

            <span class="overlay"></span>
        </a>
    </div>				
    <div class="data">
        <h4 class="entry-title">
            <a href="{{ path('mvondo_video_view', {'slug': video.slug })}}" rel="bookmark" title="{{ video.title }}">
                {{ video.title }}
            </a>
        </h4>

        <p class="meta">
            <span class="author">Added by <a href="" title="Posts by {{ video.user.firstname }} {{ video.user.lastname }}" rel="author">{{ video.user.firstname }} {{ video.user.lastname }}</a></span>
            <span class="time">2 years ago</span>
        </p>

        <p class="stats">
            {% if views is defined %}<span class="views"><i class="count">0K</i> <span class="suffix">Views</span></span>{% endif %}
            {% if comments is defined %}<span class="comments"><i class="count">0</i> <span class="suffix">Comments</span></span>{% endif %}
            {% if count is defined %}<span class="dp-post-likes likes"><i class="count" data-pid="1731">0</i> <span class="suffix">Likes</span></span>{% endif %}
        </p>
    </div>
</li>
<!-- end Item small rectangle video -->