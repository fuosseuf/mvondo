<!-- module home_lecteur -->
<div class="home-featured-full wall">

    <div class="stage-header cf">
        {% for video in videos %}       
            <div class="entry-header wrap cf" {% if(loop.first == false) %}style="display:none"{% endif %}">
                <h1 class="entry-title"><a href="{{ path('mvondo_video_view', {'slug': video.slug }) }}">{{ video.author }} - {{ video.title }}</a></h1>

                <div class="entry-actions">
                    <span class="dp-like-post"><a class="like" href="javascript:void(0);">Like?</a></span>		
                </div>
            </div>        
        {% endfor %}
    </div>

    <div class="stage wrap cf" data-ajaxload="1">
        <div class="carousel" data-autoscroll-interval="" data-jcarousel="true">
            <div class="carousel-list" style="left: 0px; top: 0px;">
                {% for video in videos %}
                    <div class="item item-video">	
                        <div class="entry-header wrap cf" {% if(loop.first == false) %}style="display:none"{% endif %}">
                            <div class="screen">
                                <iframe src="http://www.youtube.com/embed/{{ video.playerKey }}" width="950" height="534"></iframe>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div><!-- end .carousel-list -->
        </div><!-- end .carousel -->
    </div>

    <div class="nav">
        <div class="carousel fcarousel fcarousel-6 wrap cf">
            <div class="carousel-container">
                <div class="carousel-clip" data-jcarousel="true" style="width: 876px;">
                    <ul class="carousel-list" style="left: 0px; top: 0px;">
                        {% for video in videos %}
                            <li class="item current item-video {% if loop.first %}active{% endif %}" data-jcarouselcontrol="true">
                                <div class="thumb">
                                    <a class="clip-link" title="{{ video.author }} - {{ video.title }}" href="{{ path('mvondo_video_view', {'slug': video.slug }) }}">
                                        <span class="clip">
                                            <img src="{{ app.request.baseUrl }}/{{ video.image.getWebLink() }}" alt="{{ video.author }} - {{ video.title }}"><span class="vertical-align"></span>
                                        </span>

                                        <span class="overlay"></span>
                                    </a>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div><!-- end .carousel-clip -->

                <a class="carousel-prev" href="#" data-jcarouselcontrol="true"></a>
                <a class="carousel-next" href="#" data-jcarouselcontrol="true"></a>
            </div><!-- end .carousel-container -->
        </div><!-- end .carousel -->
    </div>
</div>
<!-- end module home_lecteur -->