<!-- Item small square video -->
<div class=" item cf item-video">
    <!-- thumbnail de la video -->
    <div class="thumb">
            <span class="clip">
                {# <iframe src="http://www.youtube.com/embed/{{ video.playerKey }}" width="100%" height="100%"></iframe>#}
                 <img src="{{ video.image }}" alt="{{ video.title }}">
                <span class="vertical-align"></span>
            </span>

        </a>
    </div>
    <!-- info de la video -->    
    <div class="data">
        <h2 class="entry-title">
            <a href="" rel="bookmark" title="{{ video.title }}">
               {{ video.title }}
            </a>
        </h2>

        <p class="stats">
            {% if views is defined %}<span class="views"><i class="count">0K</i> <span class="suffix">Views</span></span>{% endif %}
            {% if comments is defined %}<span class="comments"><i class="count">0</i> <span class="suffix">Comments</span></span>{% endif %}
            {% if count is defined %}<span class="dp-post-likes likes"><i class="count" data-pid="1731">0</i> <span class="suffix">Likes</span></span>{% endif %}
        </p>
        
<button onClick='add("{{ video.playerKey }}", "5")'>Add</button>
    </div>
</div>
<!-- end Item small square video -->