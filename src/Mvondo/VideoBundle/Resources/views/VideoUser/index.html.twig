{% extends "::base.html.twig" %}

{% block title %} {{ parent() }} - Dashboard {% endblock %}

{% block body %}
    <h1 class='loop-header'>Dashboard - {{ app.user.username }}</h1>
    {% if videos is defined %}
        <h2>Lists of videos</h2>
        <div class="section-content list-medium">
            <div class="nag cf">
                {% for video in videos %}
                    {% include 'MvondoVideoBundle:template:small_square_video.html.twig' %}
                    <a href='{{ path('mvondo_video_user_update', {'id':video.id, 'username': app.user.username } ) }}'>Editer</a><br/>
                    <a href='{{ path('mvondo_video_user_delete', {'id':video.id, 'username': app.user.username } ) }}'>Supprimer</a>
                    {% endfor %}
            </div>
        </div>

    {% endif %}    

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}


    {#<div>
        {{ form(form) }}

    </div>#}
{% endblock %}
